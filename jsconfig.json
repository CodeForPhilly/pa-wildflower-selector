{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    }
  },
  "include": [
    "src/**/*",
    "lib/**/*",
    "scripts/**/*",
    "script/**/*"
  ],
  "exclude": [
    "node_modules",
    "public",
    "original-assets",
    ".github",
    ".holo",
    "helm-chart",
    "deployment"
  ]
}